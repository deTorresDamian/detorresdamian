            <div>
              <div class="col">
                <a href="#agSocios" class="btn btn-info m-4 justify-content-lg-end">AGREGAR NUEVO PRESTAMO</a>
                    <table class="table  table-striped table-condensed">
                        <tr class="align-middle text-center">

                            <th>ID</th>
                            <th>ID LIBRO</th>
                            <th>TITULO</th>
                            <th>ID SOCIO</th>
                            <th>NOMBRE</th>
                            <th>APELLIDO</th>
                            <th>DNI</th>
                            <th>FECHA DE PRESTAMO</th>
                            <th>FECHA DE DEVOLUCION</th>
                            <th>ID ESTADO</th>
                            <th>ESTADO</th>
                            <th></th>
                        </tr>
                        <% for (var i=0; i< prestamos.length; i++) { %> 
                            <tr class="align-middle text-center">

                                <td><%=prestamos[i].id_prestamo %></td>
                                <td><%=prestamos[i].id_libro %></td>
                                <td><%=prestamos[i].titulo %></td>
                                <td><%=prestamos[i].id_socios %></td>
                                <td><%=prestamos[i].nombre %></td>
                                <td><%=prestamos[i].apellido %></td>
                                <td><%=prestamos[i].dni %></td>
                                <td><%=prestamos[i].fecha_ret %></td>
                                <td><%=prestamos[i].fecha_dev %></td>
                                <td><%=prestamos[i].id_estado %></td>
                                <td><%=prestamos[i].estado %></td>

                                <td class="col">
                                  <div class="mh-40 p-2">
                                    <a href="/cambiar_estado/<%=prestamos[i].id_prestamo %>" class="btn btn-sm btn-outline-warning">CAMBIAR ESTADO</a>
                                  </div>
                                  <div class="mh-40 p-2">
                                    <a href="/editar_prestamo/<%=prestamos[i].id_prestamo %>" class="btn btn-sm btn-outline-info">EDITAR</a>
                                  </div>
                                </td>
                            </tr>
                        <% } %>
                    </table>

                <div class="row-md-6 card" id="agSocios">


                    <form action="/prestamos" method="post" class="card-body">
                      <h3 class="card-title">Agregar Nuevo Prestamo</h3>
                     <div class="row">
                        <div class="col">
                          <input type="text" class="form-control"  name="id_libro" placeholder="ID Libro">
                        </div>
                        <div class="col">
                          <input type="text" class="form-control" name="id_socios" placeholder="ID Socio">
                        </div>
                        <div class="col">
                          <input type="text" class="form-control" name="fecha_ret" placeholder="Fecha de Prestamo">
                        </div>
                        <div class="col">
                          <input type="text" class="form-control" name="fecha_dev" placeholder="Fecha de Devolucion">
                        </div>
                        <div class="col">
                          <input type="number" class="form-control" name="id_estado" placeholder="ID Estado" value="4">
                        </div>
                      </div>
                           <input type="submit" class="btn btn-primary my-4" value="Guardar">
                    </form>
                </div>
              </div>
            </div>



</body>
</html>