            <div>
               <div class="col">
                 <div class="row-md-6 card">

                  <form action="/editar_socio/<%= socio.id_socios %>" method="post" class="card-body">
                    <h3 class="card-title">Editar Socio</h3>
                    
                    <div class="container">
                      <div class="row">
                        <div class="col">
                          <input type="text" class="form-control"  value="<%= socio.nombre%>" name="nombre" placeholder="Nombre">
                        </div>
                        <div class="col">
                          <input type="text" class="form-control" value="<%= socio.apellido%>" name="apellido" placeholder="Apellido">
                        </div>
                        <div class="col">
                          <input type="text" class="form-control" value="<%= socio.fecha_nac%>" name="fecha_nac" placeholder="Fecha de Nacimiento">
                        </div>
                        <div class="col">
                          <input type="number" class="form-control" value="<%= socio.id_genero%>" name="id_genero" placeholder="Id Genero">
                        </div>
                        <div class="col">
                          <input type="text" class="form-control" value="<%= socio.dni%>" name="dni" placeholder="D.N.I.">
                        </div>
                      </div>
                      <div class="row my-3">
                        <div class="col">
                          <input type="text" class="form-control"  value="<%= socio.direccion%>" name="direccion" placeholder="Direccion">
                        </div>
                        <div class="col">
                          <input type="text" class="form-control" value="<%= socio.localidad%>" name="localidad" placeholder="Localidad">
                        </div>
                        <div class="col">
                          <input type="number" class="form-control" value="<%= socio.id_provincia%>" name="id_provincia" placeholder="Id Provincia">
                        </div>
                        <div class="col">
                          <input type="text" class="form-control" value="<%= socio.telefono%>" name="telefono" placeholder="Telefono">
                        </div>
                        <div class="col">
                          <input type="text" class="form-control" value="<%= socio.email%>" name="email" placeholder="E-mail">
                        </div>
                      </div>
                      <div class="row my-3">
                        <div class="col">
                          <input type="text" class="form-control"  value="<%= socio.fecha_alta%>" name="fecha_alta" placeholder="Fecha de Alta">
                        </div>
                        <div class="col">
                          <input type="text" class="form-control" value="<%= socio.id_categoria%>" name="id_categoria" placeholder="Id Categoria de Socio">
                        </div>
                      </div>
                      <input type="submit" class="btn btn-primary my-4" value="Guardar">
                     </form>
